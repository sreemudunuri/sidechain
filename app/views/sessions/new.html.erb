<h1>Login</h1>

<%= form_with(scope: "session", url: sessions_path, local: :true) do |f| %>
<% if @error %>
  <div id="error_explanation">
    <h2>An error prohibited this user from being saved:</h2>

    <ul>
      <li><%= @error %></li>
    </ul>
  </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %><br>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %><br>
  </div>

  <div class="actions">
    <%= f.submit 'Log in' %>
  </div>
<% end %>
